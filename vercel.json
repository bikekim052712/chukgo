{
  "version": 2,
  "builds": [
    {
      "src": "dist/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/client/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "dist/client/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "dist/client/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 